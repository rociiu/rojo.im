<div class="post_edit">
	
	<% form_for(@category, :url => admin_category_path(@category), :html => {:method => :put}) do |f| %>
		<%= f.error_messages %>
		<div class="clearfix">
			<label>Name:</label>
			<%= f.text_field :name %>
		</div>
		<div class="clearfix">
			<%= f.submit 'Update' %>
		</div>
	<% end %>
</div>
